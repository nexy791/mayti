<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ribsky.mayti">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mayti">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4406747838048228~7707214372" />

        <activity
            android:name="com.ribsky.mayti.ui.activity.lib.LibActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ribsky.mayti.ui.activity.user.UserInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ribsky.mayti.ui.activity.blocked.BlockedActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ribsky.mayti.ui.activity.settings.SettingsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ribsky.mayti.ui.activity.intro.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ribsky.mayti.ui.activity.main.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ribsky.mayti.ui.activity.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>